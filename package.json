{
  "name": "the-organic",
  "version": "1.0.0",
  "scripts": {
    "dev:ayokoding": "cd apps/ayokoding && npm run dev",
    "build:ayokoding": "cd apps/ayokoding && npm run build",
    "start:ayokoding": "cd apps/ayokoding && npm run start",
    "lint:ayokoding": "cd apps/ayokoding && npm run lint",
    "install:ayokoding": "cd apps/ayokoding && npm install",
    "clean:ayokoding": "rimraf apps/ayokoding/.next apps/ayokoding/out",
    "test:ayokoding": "cd apps/ayokoding && npm run test",
    "install:all": "npm install && npm-run-all -s create-apps-dir install:ayokoding",
    "create-apps-dir": "mkdirp apps",
    "update:all": "npm update && npm-run-all -s update:apps",
    "update:apps": "cd apps && npm-run-all -p update:*",
    "clean:all": "rimraf **/node_modules",
    "format": "prettier --write .",
    "prepare": "husky install && npm run make-hooks-executable",
    "make-hooks-executable": "node scripts/make-hooks-executable.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
