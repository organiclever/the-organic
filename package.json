{
  "name": "the-organic",
  "version": "1.0.0",
  "scripts": {
    "// ----- Installation scripts ----- //": "",
    "create-apps-dir": "mkdirp apps",
    "install:all": "npm install && npm-run-all -s create-apps-dir install:ayokoding-web install:organic-lever-web install:organic-lever-web-e2e install:libs install:playwright",
    "// ----- ayokoding-web scripts ----- //": "",
    "ayokoding-web:build": "cd apps/ayokoding-web && npm run build",
    "ayokoding-web:clean": "rimraf apps/ayokoding-web/.next apps/ayokoding-web/out",
    "ayokoding-web:dev": "npm run libs:build && cd apps/ayokoding-web && npm run dev",
    "ayokoding-web:install": "cd apps/ayokoding-web && npm install",
    "ayokoding-web:lint": "cd apps/ayokoding-web && npm run lint",
    "ayokoding-web:start": "cd apps/ayokoding-web && npm run start",
    "ayokoding-web:test": "cd apps/ayokoding-web && npm run test",
    "ayokoding-web:test:watch": "cd apps/ayokoding-web && npm run test:watch",
    "// ----- Organic Lever Web scripts ----- //": "",
    "organic-lever-web:build": "cd apps/organic-lever-web && npm run build",
    "organic-lever-web:clean": "rimraf apps/organic-lever-web/.next apps/organic-lever-web/out",
    "organic-lever-web:dev": "npm run libs:build && cd apps/organic-lever-web && npm run dev",
    "organic-lever-web:install": "cd apps/organic-lever-web && npm install",
    "organic-lever-web:lint": "cd apps/organic-lever-web && npm run lint",
    "organic-lever-web:start": "cd apps/organic-lever-web && npm run start",
    "organic-lever-web:test": "cd apps/organic-lever-web && npm run test",
    "organic-lever-web:test:watch": "cd apps/organic-lever-web && npm run test:watch",
    "// ----- Organic Lever Web E2E scripts ----- //": "",
    "organic-lever-web-e2e:install": "cd apps/organic-lever-web-e2e && npm install",
    "organic-lever-web-e2e:playwright:install": "cd apps/organic-lever-web-e2e && npx playwright install --with-deps",
    "organic-lever-web-e2e:test": "cd apps/organic-lever-web-e2e && npm run test",
    "organic-lever-web-e2e:test:chrome": "cd apps/organic-lever-web-e2e && npm run test:chrome",
    "organic-lever-web-e2e:test:firefox": "cd apps/organic-lever-web-e2e && npm run test:firefox",
    "organic-lever-web-e2e:test:safari": "cd apps/organic-lever-web-e2e && npm run test:safari",
    "organic-lever-web-e2e:test:ui": "cd apps/organic-lever-web-e2e && npm run test:ui",
    "organic-lever-web-e2e:test:watch": "cd apps/organic-lever-web-e2e && npm run test:watch",
    "// ----- Library scripts ----- //": "",
    "libs:build": "cd libs/hello && npm run build",
    "libs:install": "cd libs/hello && npm install",
    "libs:test": "cd libs/hello && npm run test",
    "libs:test:watch": "cd libs/hello && npm run test:watch",
    "libs:watch": "cd libs/hello && npm run watch",
    "// ----- Combined scripts ----- //": "",
    "build": "npm-run-all --parallel ayokoding-web:build organic-lever-web:build",
    "clean": "npm-run-all --parallel ayokoding-web:clean organic-lever-web:clean",
    "dev": "npm-run-all --parallel ayokoding-web:dev organic-lever-web:dev",
    "lint": "npm-run-all --parallel ayokoding-web:lint organic-lever-web:lint",
    "test": "npm-run-all --parallel ayokoding-web:test organic-lever-web:test",
    "// ----- General scripts ----- //": "",
    "all:build": "npm-run-all libs:build ayokoding-web:build organic-lever-web:build",
    "all:clean": "rimraf **/node_modules",
    "all:update": "npm update && npm-run-all -s update:apps",
    "apps:update": "cd apps && npm-run-all -p update:*",
    "format": "prettier --write .",
    "make-hooks-executable": "node scripts/make-hooks-executable.js",
    "prepare": "husky install && npm run make-hooks-executable",
    "reset:all": "npm-run-all clean:all install:all",
    "test:unit": "npm run libs:build && npm-run-all -p ayokoding-web:test organic-lever-web:test libs:test",
    "test:unit:watch": "npm-run-all -p ayokoding-web:test:watch organic-lever-web:test:watch libs:test:watch"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "next": "14.2.8",
    "react": "^18",
    "react-dom": "^18",
    "react-query": "^3.39.3",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.8",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^13.0.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^2.0.5",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
