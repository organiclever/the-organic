{
  "name": "the-organic",
  "version": "1.0.0",
  "scripts": {
    "// AyoKoding scripts": "",
    "dev:ayokoding": "npm run build:libs && cd apps/ayokoding && npm run dev",
    "build:ayokoding": "cd apps/ayokoding && npm run build",
    "start:ayokoding": "cd apps/ayokoding && npm run start",
    "lint:ayokoding": "cd apps/ayokoding && npm run lint",
    "test:ayokoding": "cd apps/ayokoding && npm run test",
    "test:ayokoding:watch": "cd apps/ayokoding && npm run test:watch",
    "clean:ayokoding": "rimraf apps/ayokoding/.next apps/ayokoding/out",
    "// E2E Web scripts": "",
    "test:e2e": "cd apps/e2e-web && npm run test",
    "test:e2e:ui": "cd apps/e2e-web && npm run test:ui",
    "test:e2e:chrome": "cd apps/e2e-web && npm run test:chrome",
    "test:e2e:firefox": "cd apps/e2e-web && npm run test:firefox",
    "test:e2e:safari": "cd apps/e2e-web && npm run test:safari",
    "test:e2e:ci": "start-server-and-test 'npm run dev:ayokoding' http://localhost:3300 'npm run test:e2e'",
    "// Library scripts": "",
    "build:libs": "cd libs/hello && npm install && npm run build",
    "test:libs": "cd libs/hello && npm run test",
    "// Installation scripts": "",
    "install:all": "npm install && npm-run-all -s create-apps-dir install:ayokoding install:e2e-web install:libs",
    "install:ayokoding": "cd apps/ayokoding && npm install",
    "install:e2e-web": "cd apps/e2e-web && npm install",
    "install:libs": "cd libs/hello && npm install",
    "create-apps-dir": "mkdirp apps",
    "// General scripts": "",
    "build:all": "npm-run-all build:libs build:ayokoding",
    "test:unit": "npm run build:libs && npm-run-all -p test:ayokoding test:libs",
    "update:all": "npm update && npm-run-all -s update:apps",
    "update:apps": "cd apps && npm-run-all -p update:*",
    "clean:all": "rimraf **/node_modules",
    "format": "prettier --write .",
    "prepare": "husky install && npm run make-hooks-executable",
    "make-hooks-executable": "node scripts/make-hooks-executable.js",
    "reset:all": "npm-run-all clean:all install:all"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "volta": {
    "node": "20.17.0",
    "npm": "10.8.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^2.0.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
